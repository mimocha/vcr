{
  "name": "Dev Container",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "TIME_ZONE": "${localEnv:TZ:Asia/Bangkok}"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss"
      ],
      "settings": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        }
      }
    }
  },
  "remoteUser": "node",
  "postCreateCommand": "chmod +x setup.sh && ./setup.sh",
  "forwardPorts": [5173],
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspaces/${localWorkspaceFolderName},type=bind,consistency=cached",
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
    "source=${env:HOME}${env:USERPROFILE}/.gitconfig,target=/home/node/.gitconfig,type=bind,consistency=cached",
    "source=${env:HOME}${env:USERPROFILE}/.ssh,target=/home/node/.ssh,type=bind,consistency=cached",
    "source=${env:HOME}${env:USERPROFILE}/.gnupg,target=/home/node/.gnupg,type=bind,consistency=cached"
  ],
  "portsAttributes": {
    "5173": {
      "label": "Vite Dev Server",
      "onAutoForward": "notify"
    }
  }
}
